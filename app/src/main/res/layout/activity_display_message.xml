<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.iqapp.displayMessage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.iqapp.displayMessage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:textSize="20sp"
                android:text="Welcome"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:text="Answer these questions   (2mins)"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:text="1.	Which one of the four is least like the other three?"
                    />

                <RadioGroup
                    android:id="@+id/radio_group_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton android:id="@+id/one_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="#81d4fa"
                        android:checked="false"
                        android:text="Dog " />

                    <RadioButton android:id="@+id/one_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#81d4fa"
                        android:text="Mouse"
                        android:checked="false"/>

                    <RadioButton android:id="@+id/one_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#81d4fa"
                        android:text="Elephant"
                        android:checked="false"/>

                </RadioGroup>


                <LinearLayout
                    android:id="@+id/status_bar_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/right1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/wrong1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:visibility="invisible" />
                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:text="2. Choose the number that is 1/4 of 1/2 of 1/5 of 200:"
                    />

                <RadioGroup
                    android:id="@+id/radio_group_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton android:id="@+id/two_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="#81d4fa"
                        android:checked="false"
                        android:text="2 " />

                    <RadioButton android:id="@+id/two_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#81d4fa"
                        android:text="5"
                        android:checked="false"/>

                    <RadioButton android:id="@+id/two_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#81d4fa"
                        android:text="10"
                        android:checked="false"/>

                </RadioGroup>


                <LinearLayout
                    android:id="@+id/status_bar_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/right2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/wrong2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:visibility="invisible" />
                </LinearLayout>


            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:text="3. Which one of the numbers does not belong in the following series   2 - 3 - 6 - 7 - 8 - 14 - 15 - 30"
                    />

                <RadioGroup
                    android:id="@+id/radio_group_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton android:id="@+id/three_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="#81d4fa"
                        android:checked="false"
                        android:text="THREE  " />

                    <RadioButton android:id="@+id/three_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#81d4fa"
                        android:text="SEVEN"
                        android:checked="false"/>

                    <RadioButton android:id="@+id/three_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#81d4fa"
                        android:text="EIGHT"
                        android:checked="false"/>

                </RadioGroup>


                <LinearLayout
                    android:id="@+id/status_bar_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/right3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/wrong3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:visibility="invisible" />
                </LinearLayout>


            </LinearLayout>















        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">


            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:onClick="submit"
                android:background="#1e90ff"
                android:text="SUBMIT"
                android:layout_marginStart="55dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="17dp" />"

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1e90ff"
                android:onClick="next"
                android:text="next"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/submit_button"
                android:layout_toEndOf="@+id/submit_button"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>